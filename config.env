# Sorting Visualizer Environment Configuration
# Copy this file to .env and modify as needed

# Application Settings
NODE_ENV=development
PORT=3000
HOST=localhost

# Feature Flags
ENABLE_SOUND_EFFECTS=false
ENABLE_ANIMATIONS=true
ENABLE_STATISTICS=true
ENABLE_ALGORITHM_INFO=true

# Performance Settings
DEFAULT_ARRAY_SIZE=30
MIN_ARRAY_SIZE=5
MAX_ARRAY_SIZE=100
DEFAULT_SPEED=5
MIN_SPEED=1
MAX_SPEED=10

# Animation Settings
ANIMATION_DURATION=300
COMPARISON_DELAY=50
SWAP_DELAY=100
SORTED_DELAY=50

# UI Configuration
THEME=default
COLOR_SCHEME=gradient
LANGUAGE=en

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_CONSOLE_LOGS=true

# API Configuration (if adding backend later)
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=5000

# Analytics (optional)
ENABLE_ANALYTICS=false
ANALYTICS_ID=

# Security
ENABLE_HTTPS=false
CORS_ORIGIN=*
